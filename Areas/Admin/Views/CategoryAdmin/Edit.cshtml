@model Doan_Web_CK.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h1>Chỉnh sửa danh mục</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên danh mục</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="mt-3 btn btn-outline-primary">Lưu</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="mt-3 btn btn-outline-light" asp-action="Index">Trở về trang danh mục</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model Doan_Web_CK.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<h1>Chi tiết danh mục</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên danh mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-light" asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh sửa</a>
</div>
<a class="mt-4 btn btn-outline-light" asp-action="Index">Trở về trang chủ danh mục</a>

@model IEnumerable<Doan_Web_CK.Models.Category>
@{
    ViewData["Title"] = "Danh mục bài viết";
}

<h1>Danh mục</h1>

<p>
    <a class="btn btn-outline-light" asp-action="Create">Tạo danh mục mới</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                Tên danh mục
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-outline-light" asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a>
                    <a class="btn btn-outline-light" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                    <a class="btn btn-outline-light" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
